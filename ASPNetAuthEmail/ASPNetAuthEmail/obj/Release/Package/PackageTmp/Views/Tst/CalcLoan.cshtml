
@{
    ViewBag.Title = "CalcLoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    input[type=range] {
        -webkit-appearance: none;
    }

        input[type=range]::-webkit-slider-runnable-track {
            width: 400px;
