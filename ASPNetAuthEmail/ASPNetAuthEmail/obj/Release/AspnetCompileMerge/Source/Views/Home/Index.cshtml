@model IEnumerable<ASPNetAuthEmail.Models.Order>

@{
    ViewBag.Title = "Личный кабинет";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список заявок</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered table-hover">
            <tr>
                <th class="text-right">№ заявки</th>
                <th class="text-center">Фамилия</th>                
                <th class="text-center">Имя</th>
                <th class="text-center">Отчество</th>
                <th class="text-center">Телефон</th>
                @*<th class="text-right">Цена</th>*@
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.OrderId</td>
                    <td width="250">@Html.ActionLink(item.SurName, "Edit", new { item.OrderId })</td>
                    <td class="text-right" width="150">@item.Name </td>
                    <td class="text-right" width="150">@item.Otch </td>
                    <td class="text-right" width="100">@item.Phone </td>

                    @*<td class="text-right">@item.GameId</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.GameId })</td>
                    <td class="text-right">@item.Description </td>
                    <td class="text-right">@item.Category </td>
                    <td class="text-right">@item.Price.ToString("# руб")</td>*@
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить заявку", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>